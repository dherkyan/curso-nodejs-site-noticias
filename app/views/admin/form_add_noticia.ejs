		<%}%>
<form action="/noticias/salvar" method="POST" id="contactForm" novalidate>
  <div class="control-group">
    <div class="form-group floating-label-form-group controls">
      <label>Título</label>
      <input type="text" class="form-control" placeholder="Título" id="titulo" name="titulo" value="<%=noticia.titulo%>"
        required data-validation-required-message="Título é obrigatório">
      <p class="help-block text-danger"></p>
    </div>
  </div>
  <div class="control-group">
    <div class="form-group floating-label-form-group controls">
      <label>Resumo</label>
      <input type="text" class="form-control" placeholder="Resumo" id="resumo" name="resumo" value="<%=noticia.resumo%>"
        required data-validation-required-message="Resumo é obrigatório">
      <p class="help-block text-danger"></p>
    </div>
  </div>
  <div class="control-group">
    <div class="form-group col-xs-12 floating-label-form-group controls">
      <label>Autor</label>
      <input type="text" class="form-control" placeholder="Nome Autor" id="autor" name="autor"
        value="<%=noticia.autor%>" required data-validation-required-message="Nome do Autor é obrigatório">
      <p class="help-block text-danger"></p>
    </div>
  </div>
  <div class="control-group">
    <div class="form-group col-xs-12 floating-label-form-group controls">
      <label>Autor</label>
      <input type="date" class="form-control" placeholder="Data Notícia" id="data_noticia" name="data_noticia"
        value="<%=noticia.data_noticia%>" required data-validation-required-message="Data Notícia">
      <p class="help-block text-danger"></p>
    </div>
  </div>
  <div class="control-group">
    <div class="form-group floating-label-form-group controls">
      <label>Notícia</label>
      <textarea rows="5" class="form-control" placeholder="Texto da notícia" id="texto" name="texto" required
        data-validation-required-message="Texto da notícia é obrigatório"><%=noticia.texto%></textarea>
      <p class="help-block text-danger"></p>
    </div>
  </div>
  <br>
  <div id="success"></div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" id="btnCadastrarNoticia">Cadastrar Notícia</button>
  </div>
</form>
<%- include('../templates/footer'); %>